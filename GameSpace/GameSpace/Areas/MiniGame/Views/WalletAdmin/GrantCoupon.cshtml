@model GameSpace.Areas.MiniGame.Models.ViewModels.WalletGrantCouponViewModel
@{
    ViewData["Title"] = "發放會員之商城優惠券";
}

@await Html.PartialAsync("_MiniGameAdminTabs")

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
        <i class="fas fa-check-circle me-2"></i>
        <strong>成功！</strong> @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
        <i class="fas fa-exclamation-triangle me-2"></i>
        <strong>錯誤！</strong> @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- 發放優惠券表單卡片 -->
<div class="card shadow-sm mb-4">
    <div class="card-header bg-gradient-primary text-white">
        <h4 class="mb-0"><i class="fas fa-ticket-alt me-2"></i>發放商城優惠券</h4>
    </div>
    <div class="card-body p-4">
        <form method="post" asp-action="GrantCoupon">
            @Html.AntiForgeryToken()
            <div class="row g-3 mb-3">
                <div class="col-md-4">
                    <div class="form-floating">
                        <input type="number" class="form-control rounded" id="userId" name="userId" required min="0" placeholder="會員 ID" />
                        <label for="userId"><i class="fas fa-user me-1"></i>會員 ID <span class="text-danger">*</span></label>
                    </div>
                    <small class="text-muted ms-2">輸入要發放優惠券的會員編號</small>
                </div>
                <div class="col-md-8">
                    <div class="form-floating">
                        <select class="form-select rounded" id="couponTypeId" name="couponTypeId" required>
                            <option value="">請選擇優惠券類型</option>
                            @foreach (var ct in Model.CouponTypes)
                            {
                                <option value="@ct.CouponTypeId">
                                    @ct.TypeName - @ct.Description (已發放: @ct.TotalIssued / 未使用: @ct.UnusedCount)
                                </option>
                            }
                        </select>
                        <label for="couponTypeId"><i class="fas fa-tag me-1"></i>優惠券類型 <span class="text-danger">*</span></label>
                    </div>
                    <small class="text-muted ms-2">
                        找不到需要的類型？
                        <a asp-area="MiniGame" asp-controller="AdminCoupon" asp-action="CreateCouponType" class="text-primary text-decoration-underline">
                            <i class="fas fa-plus-circle me-1"></i>新增優惠券類型
                        </a>
                    </small>
                </div>
            </div>

            <div class="row">
                <div class="col-12">
                    <button type="submit" class="btn btn-primary btn-lg px-5 rounded-pill">
                        <i class="fas fa-gift me-2"></i>立即發放優惠券
                    </button>
                </div>
            </div>
        </form>
    </div>
    <div class="card-footer bg-light">
        <div class="d-flex align-items-center text-muted small">
            <i class="fas fa-info-circle me-2 text-info"></i>
            <div>
                發放後會自動產生優惠券序號並記錄於錢包異動歷史中。每次發放一張優惠券給指定會員。
            </div>
        </div>
    </div>
</div>

<!-- 優惠券類型概況 -->
<div class="card shadow-sm">
    <div class="card-header bg-light d-flex justify-content-between align-items-center">
        <h5 class="mb-0"><i class="fas fa-list me-2 text-primary"></i>優惠券類型概況</h5>
        @if (Model.CouponTypes.Count > 0)
        {
            <span class="badge bg-primary rounded-pill">@Model.CouponTypes.Count 種類型</span>
        }
    </div>
    <div class="card-body p-0">
        @if (Model.CouponTypes.Count == 0)
        {
            <div class="p-5 text-center">
                <i class="fas fa-ticket-alt fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">尚未建立優惠券類型</h5>
                <p class="text-muted">請先建立優惠券類型才能發放</p>
                <a asp-area="MiniGame" asp-controller="AdminCoupon" asp-action="CreateCouponType" class="btn btn-primary rounded-pill">
                    <i class="fas fa-plus-circle me-2"></i>立即新增類型
                </a>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4"><i class="fas fa-hashtag me-1"></i>類型ID</th>
                            <th><i class="fas fa-tag me-1"></i>類型名稱</th>
                            <th><i class="fas fa-align-left me-1"></i>描述</th>
                            <th class="text-end"><i class="fas fa-paper-plane me-1"></i>已發放</th>
                            <th class="text-end pe-4"><i class="fas fa-check-circle me-1"></i>未使用</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var summary in Model.CouponTypes)
                        {
                            var usageRate = summary.TotalIssued > 0
                                ? ((double)(summary.TotalIssued - summary.UnusedCount) / summary.TotalIssued * 100)
                                : 0;
                            <tr>
                                <td class="ps-4"><span class="badge bg-secondary">@summary.CouponTypeId</span></td>
                                <td><strong>@summary.TypeName</strong></td>
                                <td>
                                    <small class="text-muted">@summary.Description</small>
                                </td>
                                <td class="text-end">
                                    <span class="badge bg-info">@summary.TotalIssued</span>
                                </td>
                                <td class="text-end pe-4">
                                    <span class="badge bg-success">@summary.UnusedCount</span>
                                    @if (summary.TotalIssued > 0)
                                    {
                                        <br />
                                        <small class="text-muted">使用率: @usageRate.ToString("F1")%</small>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
