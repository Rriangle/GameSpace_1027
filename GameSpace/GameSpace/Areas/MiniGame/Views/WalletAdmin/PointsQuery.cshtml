@model GameSpace.Areas.MiniGame.Models.ViewModels.WalletPointsQueryViewModel
@{
    ViewData["Title"] = "查詢會員點數";
}

@await Html.PartialAsync("_MiniGameAdminTabs")

<!-- 統計卡片區 -->
@if (Model.Results.TotalCount > 0)
{
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-start border-primary border-4 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="text-xs fw-bold text-primary text-uppercase mb-1">查詢結果</div>
                            <div class="h5 mb-0 fw-bold text-gray-800">@Model.Results.TotalCount 筆</div>
                        </div>
                        <div class="text-primary opacity-50">
                            <i class="fas fa-database fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-start border-success border-4 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="text-xs fw-bold text-success text-uppercase mb-1">總點數</div>
                            <div class="h5 mb-0 fw-bold text-gray-800">@Model.Results.Items.Sum(x => x.Points).ToString("N0")</div>
                        </div>
                        <div class="text-success opacity-50">
                            <i class="fas fa-coins fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-start border-info border-4 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="text-xs fw-bold text-info text-uppercase mb-1">平均點數</div>
                            <div class="h5 mb-0 fw-bold text-gray-800">@((Model.Results.TotalCount > 0 ? Model.Results.Items.Average(x => x.Points) : 0).ToString("N0"))</div>
                        </div>
                        <div class="text-info opacity-50">
                            <i class="fas fa-chart-line fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-start border-warning border-4 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="text-xs fw-bold text-warning text-uppercase mb-1">最高點數</div>
                            <div class="h5 mb-0 fw-bold text-gray-800">@((Model.Results.Items.Any() ? Model.Results.Items.Max(x => x.Points) : 0).ToString("N0"))</div>
                        </div>
                        <div class="text-warning opacity-50">
                            <i class="fas fa-trophy fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<!-- 搜尋表單卡片 -->
<div class="card shadow-sm mb-4">
    <div class="card-header bg-gradient-primary text-white">
        <h4 class="mb-0"><i class="fas fa-search me-2"></i>會員點數查詢</h4>
    </div>
    <div class="card-body p-4">
        <form method="get" class="row g-3">
            <div class="col-md-3">
                <div class="form-floating">
                    <input class="form-control rounded" id="Query_UserId" name="UserId" type="number" min="0" value="@(Model.Query.UserId ?? null)" placeholder="會員 ID" />
                    <label for="Query_UserId"><i class="fas fa-user me-1"></i>會員 ID</label>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-floating">
                    <input class="form-control rounded" id="Query_MinAmount" name="MinAmount" type="number" min="0" value="@(Model.Query.MinAmount ?? null)" placeholder="最少點數" />
                    <label for="Query_MinAmount"><i class="fas fa-arrow-up me-1"></i>最少點數</label>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-floating">
                    <input class="form-control rounded" id="Query_MaxAmount" name="MaxAmount" type="number" min="0" value="@(Model.Query.MaxAmount ?? null)" placeholder="最多點數" />
                    <label for="Query_MaxAmount"><i class="fas fa-arrow-down me-1"></i>最多點數</label>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-floating">
                    <select class="form-select rounded" id="Query_SortBy" name="SortBy">
                        <option value="points_desc" selected="@(Model.Query.SortBy?.Equals("points_desc", StringComparison.OrdinalIgnoreCase) == true)">點數（高 → 低）</option>
                        <option value="points_asc" selected="@(Model.Query.SortBy?.Equals("points_asc", StringComparison.OrdinalIgnoreCase) == true)">點數（低 → 高）</option>
                        <option value="userid_desc" selected="@(Model.Query.SortBy?.Equals("userid_desc", StringComparison.OrdinalIgnoreCase) == true)">會員ID（高 → 低）</option>
                        <option value="userid_asc" selected="@(Model.Query.SortBy?.Equals("userid_asc", StringComparison.OrdinalIgnoreCase) == true)">會員ID（低 → 高）</option>
                    </select>
                    <label for="Query_SortBy"><i class="fas fa-sort me-1"></i>排序方式</label>
                </div>
            </div>
            <div class="col-md-9">
                <div class="form-floating">
                    <input class="form-control rounded" id="Query_SearchTerm" name="SearchTerm" value="@(Model.Query.SearchTerm ?? string.Empty)" placeholder="搜尋關鍵字" />
                    <label for="Query_SearchTerm"><i class="fas fa-search me-1"></i>搜尋關鍵字（帳號 / 姓名 / Email）</label>
                </div>
            </div>
            <div class="col-md-3">
                <button type="submit" class="btn btn-primary btn-lg w-100 rounded-pill">
                    <i class="fas fa-search me-2"></i>開始搜尋
                </button>
            </div>
        </form>
    </div>
</div>

<!-- 查詢結果卡片 -->
<div class="card shadow-sm">
    <div class="card-header bg-light d-flex justify-content-between align-items-center">
        <h5 class="mb-0"><i class="fas fa-table me-2 text-primary"></i>查詢結果</h5>
        @if (Model.Results.TotalCount > 0)
        {
            <span class="badge bg-primary rounded-pill">共 @Model.Results.TotalCount 筆</span>
        }
    </div>
    <div class="card-body p-0">
        @if (Model.Results.TotalCount == 0)
        {
            <div class="p-5 text-center">
                <i class="fas fa-search fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">查無資料</h5>
                <p class="text-muted">請嘗試調整搜尋條件</p>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4"><i class="fas fa-hashtag me-1"></i>會員ID</th>
                            <th><i class="fas fa-user me-1"></i>帳號</th>
                            <th><i class="fas fa-id-card me-1"></i>姓名</th>
                            <th><i class="fas fa-envelope me-1"></i>Email</th>
                            <th class="text-end pe-4"><i class="fas fa-coins me-1"></i>點數</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var record in Model.Results.Items)
                        {
                            <tr>
                                <td class="ps-4"><span class="badge bg-secondary">@record.UserId</span></td>
                                <td><strong>@record.UserAccount</strong></td>
                                <td>@record.UserName</td>
                                <td><small class="text-muted">@record.Email</small></td>
                                <td class="text-end pe-4">
                                    <span class="badge bg-primary fs-6">@record.Points.ToString("N0")</span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="card-footer bg-white">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="text-muted">
                        <i class="fas fa-info-circle me-1"></i>
                        顯示第 @((Model.Results.CurrentPage - 1) * Model.Query.PageSize + 1) - @(Math.Min(Model.Results.CurrentPage * Model.Query.PageSize, Model.Results.TotalCount)) 筆，共 @Model.Results.TotalCount 筆資料
                        <span class="ms-2">|</span>
                        <span class="ms-2">頁次 @Model.Results.CurrentPage / @Model.Results.TotalPages</span>
                    </div>
                    <div class="btn-group shadow-sm">
                        <a class="btn btn-outline-primary @(Model.Results.HasPreviousPage ? string.Empty : "disabled")"
                           asp-action="PointsQuery"
                           asp-route-UserId="@(Model.Query.UserId)"
                           asp-route-MinAmount="@(Model.Query.MinAmount)"
                           asp-route-MaxAmount="@(Model.Query.MaxAmount)"
                           asp-route-SearchTerm="@(Model.Query.SearchTerm)"
                           asp-route-SortBy="@(Model.Query.SortBy)"
                           asp-route-PageNumber="@(Model.Results.CurrentPage - 1)"
                           asp-route-PageSize="@(Model.Query.PageSize)">
                            <i class="fas fa-chevron-left me-1"></i>上一頁
                        </a>
                        <a class="btn btn-outline-primary @(Model.Results.HasNextPage ? string.Empty : "disabled")"
                           asp-action="PointsQuery"
                           asp-route-UserId="@(Model.Query.UserId)"
                           asp-route-MinAmount="@(Model.Query.MinAmount)"
                           asp-route-MaxAmount="@(Model.Query.MaxAmount)"
                           asp-route-SearchTerm="@(Model.Query.SearchTerm)"
                           asp-route-SortBy="@(Model.Query.SortBy)"
                           asp-route-PageNumber="@(Model.Results.CurrentPage + 1)"
                           asp-route-PageSize="@(Model.Query.PageSize)">
                            下一頁<i class="fas fa-chevron-right ms-1"></i>
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
