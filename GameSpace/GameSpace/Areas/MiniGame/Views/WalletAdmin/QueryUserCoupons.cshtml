@model GameSpace.Areas.MiniGame.Models.ViewModels.WalletCouponsQueryViewModel
@{
    ViewData["Title"] = "查詢商城優惠券";
}

@await Html.PartialAsync("_MiniGameAdminTabs")

<div class="container-fluid">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0"><i class="fas fa-ticket-alt me-2"></i>查詢商城優惠券</h3>
        </div>
        <div class="card-body">
            <!-- 搜尋條件區 -->
            <form method="get" class="mb-4">
                <div class="row g-3">
                    <div class="col-md-3">
                        <label for="userId" class="form-label">會員 ID</label>
                        <input type="number" class="form-control" id="userId" name="Query.UserId" value="@Model.Query.UserId" placeholder="請輸入會員 ID">
                    </div>
                    <div class="col-md-3">
                        <label for="searchTerm" class="form-label">關鍵字</label>
                        <input type="text" class="form-control" id="searchTerm" name="Query.SearchTerm" value="@Model.Query.SearchTerm" placeholder="帳號、姓名、優惠券代碼">
                    </div>
                    <div class="col-md-3">
                        <label for="status" class="form-label">優惠券狀態</label>
                        <select class="form-select" id="status" name="Query.Status">
                            <option value="">全部</option>
                            <option value="unused" selected="@(Model.Query.Status == "unused")">未使用</option>
                            <option value="used" selected="@(Model.Query.Status == "used")">已使用</option>
                            <option value="expired" selected="@(Model.Query.Status == "expired")">已過期</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label for="sortBy" class="form-label">排序方式</label>
                        <select class="form-select" id="sortBy" name="Query.SortBy">
                            <option value="AcquiredTime" selected="@(Model.Query.SortBy == "AcquiredTime")">取得時間</option>
                            <option value="UsedTime" selected="@(Model.Query.SortBy == "UsedTime")">使用時間</option>
                            <option value="ExpiryDate" selected="@(Model.Query.SortBy == "ExpiryDate")">到期日期</option>
                        </select>
                    </div>
                    <div class="col-md-12 d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-search me-1"></i>查詢
                        </button>
                        <a href="@Url.Action("QueryUserCoupons")" class="btn btn-secondary">
                            <i class="fas fa-redo me-1"></i>重置
                        </a>
                    </div>
                </div>
            </form>

            <!-- 結果列表 -->
            @if (Model.Results.Items.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle">
                        <thead class="table-dark">
                            <tr>
                                <th>優惠券 ID</th>
                                <th>優惠券代碼</th>
                                <th>會員</th>
                                <th>優惠券類型</th>
                                <th>折扣</th>
                                <th>取得時間</th>
                                <th>到期日</th>
                                <th class="text-center">狀態</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Results.Items)
                            {
                                <tr>
                                    <td>@item.CouponId</td>
                                    <td><code>@item.CouponCode</code></td>
                                    <td>
                                        <div>@item.UserName</div>
                                        <small class="text-muted">ID: @item.UserId</small>
                                    </td>
                                    <td>@item.CouponTypeName</td>
                                    <td>
                                        @if (item.DiscountPercentage.HasValue)
                                        {
                                            <span class="badge bg-warning">@item.DiscountPercentage.Value%</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-info">$@item.DiscountAmount</span>
                                        }
                                    </td>
                                    <td>@item.AcquiredTime.ToString("yyyy-MM-dd HH:mm")</td>
                                    <td>
                                        @if (item.ExpiryDate.HasValue)
                                        {
                                            <span class="@(item.IsExpired ? "text-danger" : "")">
                                                @item.ExpiryDate.Value.ToString("yyyy-MM-dd")
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">永久有效</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        @if (item.IsUsed)
                                        {
                                            <span class="badge bg-secondary">已使用</span>
                                            @if (item.UsedTime.HasValue)
                                            {
                                                <div><small class="text-muted">@item.UsedTime.Value.ToString("yyyy-MM-dd")</small></div>
                                            }
                                        }
                                        else if (item.IsExpired)
                                        {
                                            <span class="badge bg-danger">已過期</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">未使用</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- 分頁 -->
                @if (Model.Results.TotalPages > 1)
                {
                    <nav aria-label="分頁導覽">
                        <ul class="pagination justify-content-center">
                            <li class="page-item @(!Model.Results.HasPreviousPage ? "disabled" : "")">
                                <a class="page-link" href="@Url.Action("QueryUserCoupons", new {
                                    UserId = Model.Query.UserId,
                                    SearchTerm = Model.Query.SearchTerm,
                                    Status = Model.Query.Status,
                                    SortBy = Model.Query.SortBy,
                                    PageNumber = Model.Results.CurrentPage - 1
                                })">上一頁</a>
                            </li>

                            @for (int i = Math.Max(1, Model.Results.CurrentPage - 2); i <= Math.Min(Model.Results.TotalPages, Model.Results.CurrentPage + 2); i++)
                            {
                                <li class="page-item @(i == Model.Results.CurrentPage ? "active" : "")">
                                    <a class="page-link" href="@Url.Action("QueryUserCoupons", new {
                                        UserId = Model.Query.UserId,
                                        SearchTerm = Model.Query.SearchTerm,
                                        Status = Model.Query.Status,
                                        SortBy = Model.Query.SortBy,
                                        PageNumber = i
                                    })">@i</a>
                                </li>
                            }

                            <li class="page-item @(!Model.Results.HasNextPage ? "disabled" : "")">
                                <a class="page-link" href="@Url.Action("QueryUserCoupons", new {
                                    UserId = Model.Query.UserId,
                                    SearchTerm = Model.Query.SearchTerm,
                                    Status = Model.Query.Status,
                                    SortBy = Model.Query.SortBy,
                                    PageNumber = Model.Results.CurrentPage + 1
                                })">下一頁</a>
                            </li>
                        </ul>
                    </nav>

                    <div class="text-center text-muted">
                        顯示第 @((Model.Results.CurrentPage - 1) * Model.Results.PageSize + 1) - @Math.Min(Model.Results.CurrentPage * Model.Results.PageSize, Model.Results.TotalCount) 筆，共 @Model.Results.TotalCount 筆資料
                    </div>
                }
            }
            else
            {
                <div class="alert alert-info text-center py-5">
                    <i class="fas fa-info-circle fa-3x mb-3"></i>
                    <p class="mb-0 fs-5">查無優惠券資料</p>
                    <p class="text-muted">請調整搜尋條件後重試</p>
                </div>
            }
        </div>
    </div>
</div>
