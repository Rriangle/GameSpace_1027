@model GameSpace.Areas.MiniGame.Models.ViewModels.WalletPointsQueryViewModel
@{
    ViewData["Title"] = "查詢點數";
}

@await Html.PartialAsync("_MiniGameAdminTabs")

<div class="container-fluid">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0"><i class="fas fa-coins me-2"></i>查詢點數</h3>
        </div>
        <div class="card-body">
            <!-- 搜尋條件區 -->
            <form method="get" class="mb-4">
                <div class="row g-3">
                    <div class="col-md-3">
                        <label for="userId" class="form-label">會員 ID</label>
                        <input type="number" class="form-control" id="userId" name="Query.UserId" value="@Model.Query.UserId" placeholder="請輸入會員 ID">
                    </div>
                    <div class="col-md-3">
                        <label for="userName" class="form-label">帳號/姓名</label>
                        <input type="text" class="form-control" id="userName" name="Query.UserName" value="@Model.Query.UserName" placeholder="請輸入帳號或姓名">
                    </div>
                    <div class="col-md-3">
                        <label for="searchTerm" class="form-label">關鍵字</label>
                        <input type="text" class="form-control" id="searchTerm" name="Query.SearchTerm" value="@Model.Query.SearchTerm" placeholder="請輸入關鍵字">
                    </div>
                    <div class="col-md-3">
                        <label for="sortBy" class="form-label">排序方式</label>
                        <select class="form-select" id="sortBy" name="Query.SortBy">
                            <option value="Points" selected="@(Model.Query.SortBy == "Points")">點數</option>
                            <option value="UserName" selected="@(Model.Query.SortBy == "UserName")">姓名</option>
                            <option value="UserId" selected="@(Model.Query.SortBy == "UserId")">會員 ID</option>
                        </select>
                    </div>
                    <div class="col-md-12 d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-search me-1"></i>查詢
                        </button>
                        <a href="@Url.Action("QueryUserPoints")" class="btn btn-secondary">
                            <i class="fas fa-redo me-1"></i>重置
                        </a>
                    </div>
                </div>
            </form>

            <!-- 結果列表 -->
            @if (Model.Results.Items.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle">
                        <thead class="table-dark">
                            <tr>
                                <th>會員 ID</th>
                                <th>帳號</th>
                                <th>姓名</th>
                                <th>Email</th>
                                <th class="text-end">目前點數</th>
                                <th class="text-center">操作</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Results.Items)
                            {
                                <tr>
                                    <td>@item.UserId</td>
                                    <td>@item.UserAccount</td>
                                    <td>@item.UserName</td>
                                    <td>@item.Email</td>
                                    <td class="text-end">
                                        <span class="badge bg-success fs-6">@item.Points.ToString("N0")</span>
                                    </td>
                                    <td class="text-center">
                                        <a href="@Url.Action("QueryUserTransactions", new { userId = item.UserId })"
                                           class="btn btn-sm btn-info"
                                           title="查看交易紀錄">
                                            <i class="fas fa-history"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- 分頁 -->
                @if (Model.Results.TotalPages > 1)
                {
                    <nav aria-label="分頁導覽">
                        <ul class="pagination justify-content-center">
                            <li class="page-item @(!Model.Results.HasPreviousPage ? "disabled" : "")">
                                <a class="page-link" href="@Url.Action("QueryUserPoints", new {
                                    UserId = Model.Query.UserId,
                                    UserName = Model.Query.UserName,
                                    SearchTerm = Model.Query.SearchTerm,
                                    SortBy = Model.Query.SortBy,
                                    PageNumber = Model.Results.CurrentPage - 1
                                })">上一頁</a>
                            </li>

                            @for (int i = Math.Max(1, Model.Results.CurrentPage - 2); i <= Math.Min(Model.Results.TotalPages, Model.Results.CurrentPage + 2); i++)
                            {
                                <li class="page-item @(i == Model.Results.CurrentPage ? "active" : "")">
                                    <a class="page-link" href="@Url.Action("QueryUserPoints", new {
                                        UserId = Model.Query.UserId,
                                        UserName = Model.Query.UserName,
                                        SearchTerm = Model.Query.SearchTerm,
                                        SortBy = Model.Query.SortBy,
                                        PageNumber = i
                                    })">@i</a>
                                </li>
                            }

                            <li class="page-item @(!Model.Results.HasNextPage ? "disabled" : "")">
                                <a class="page-link" href="@Url.Action("QueryUserPoints", new {
                                    UserId = Model.Query.UserId,
                                    UserName = Model.Query.UserName,
                                    SearchTerm = Model.Query.SearchTerm,
                                    SortBy = Model.Query.SortBy,
                                    PageNumber = Model.Results.CurrentPage + 1
                                })">下一頁</a>
                            </li>
                        </ul>
                    </nav>

                    <div class="text-center text-muted">
                        顯示第 @((Model.Results.CurrentPage - 1) * Model.Results.PageSize + 1) - @Math.Min(Model.Results.CurrentPage * Model.Results.PageSize, Model.Results.TotalCount) 筆，共 @Model.Results.TotalCount 筆資料
                    </div>
                }
            }
            else
            {
                <div class="alert alert-info text-center py-5">
                    <i class="fas fa-info-circle fa-3x mb-3"></i>
                    <p class="mb-0 fs-5">查無點數資料</p>
                    <p class="text-muted">請調整搜尋條件後重試</p>
                </div>
            }
        </div>
    </div>
</div>
