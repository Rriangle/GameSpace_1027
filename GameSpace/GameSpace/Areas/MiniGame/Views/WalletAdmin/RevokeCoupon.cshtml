@model GameSpace.Areas.MiniGame.Models.ViewModels.WalletRevokeCouponViewModel
@{
    ViewData["Title"] = "撤銷優惠券";
}

@await Html.PartialAsync("_MiniGameAdminTabs")

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card shadow-sm mb-4">
    <div class="card-header bg-warning text-dark">
        <h5 class="mb-0"><i class="fas fa-undo me-2"></i>撤銷優惠券</h5>
    </div>
    <div class="card-body">
        <div class="alert alert-warning" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>
            <strong>注意：</strong>此功能會永久刪除優惠券，並在錢包異動歷史中記錄。已使用的優惠券無法撤銷。
        </div>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-header bg-light">
        <h5 class="mb-0"><i class="fas fa-ticket-alt me-2"></i>最近發放的未使用優惠券（前 50 筆）</h5>
    </div>
    <div class="card-body">
        @if (Model.UnusedCoupons.Count == 0)
        {
            <div class="alert alert-info mb-0">
                查無未使用的優惠券。
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>優惠券ID</th>
                            <th>序號</th>
                            <th>會員ID</th>
                            <th>會員姓名</th>
                            <th>優惠券類型</th>
                            <th>折扣金額</th>
                            <th>折扣百分比</th>
                            <th>取得時間</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var coupon in Model.UnusedCoupons)
                        {
                            <tr>
                                <td>@coupon.CouponId</td>
                                <td><code>@coupon.CouponCode</code></td>
                                <td>@coupon.UserId</td>
                                <td>@coupon.UserName</td>
                                <td>@coupon.CouponTypeName</td>
                                <td class="text-end">
                                    @if (coupon.DiscountPercentage == null)
                                    {
                                        <span>$@coupon.DiscountAmount</span>
                                    }
                                    else
                                    {
                                        <span>-</span>
                                    }
                                </td>
                                <td class="text-end">
                                    @if (coupon.DiscountPercentage != null)
                                    {
                                        <span>@coupon.DiscountPercentage%</span>
                                    }
                                    else
                                    {
                                        <span>-</span>
                                    }
                                </td>
                                <td>@coupon.AcquiredTime.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                <td>
                                    <button type="button" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#revokeModal@(coupon.CouponId)">
                                        <i class="fas fa-trash-alt me-1"></i>撤銷
                                    </button>

                                    <!-- Modal -->
                                    <div class="modal fade" id="revokeModal@(coupon.CouponId)" tabindex="-1" aria-labelledby="revokeModalLabel@(coupon.CouponId)" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header bg-warning text-dark">
                                                    <h5 class="modal-title" id="revokeModalLabel@(coupon.CouponId)">確認撤銷優惠券</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                </div>
                                                <form method="post" asp-action="RevokeCoupon">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="couponId" value="@coupon.CouponId" />
                                                    <div class="modal-body">
                                                        <div class="mb-3">
                                                            <p><strong>優惠券序號：</strong> <code>@coupon.CouponCode</code></p>
                                                            <p><strong>會員 ID：</strong> @coupon.UserId</p>
                                                            <p><strong>會員姓名：</strong> @coupon.UserName</p>
                                                            <p><strong>優惠券類型：</strong> @coupon.CouponTypeName</p>
                                                        </div>
                                                        <div class="mb-3">
                                                            <label for="reason@(coupon.CouponId)" class="form-label">撤銷原因 <span class="text-danger">*</span></label>
                                                            <textarea class="form-control" id="reason@(coupon.CouponId)" name="reason" rows="3" required maxlength="200" placeholder="請輸入撤銷原因，例如：發放錯誤、會員要求"></textarea>
                                                        </div>
                                                        <div class="alert alert-warning mb-0">
                                                            <i class="fas fa-exclamation-triangle me-2"></i>
                                                            此操作無法復原，請謹慎操作！
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">取消</button>
                                                        <button type="submit" class="btn btn-danger">
                                                            <i class="fas fa-check me-1"></i>確認撤銷
                                                        </button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
