<!DOCTYPE html>
<html lang="zh-TW">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@(string.IsNullOrWhiteSpace(ViewData["Title"] as string) ? "GamiPort MiniGame" : $"{ViewData["Title"]} - GamiPort")</title>

    <link rel="icon" type="image/x-icon" href="~/icon/ImageToStl.com_Gamiport.ico" asp-append-version="true" />

    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/font-awesome/css/all.min.css" rel="stylesheet" />
    <link href="~/css/stylecol.css" rel="stylesheet" />
    <link href="~/lib/datatables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
    <link href="~/lib/sb-admin/css/sb-admin-2.min.css" rel="stylesheet" />

    @RenderSection("Styles", required: false)
</head>
<body id="top" class="d-flex flex-column vh-100">

    <partial name="~/Views/Shared/_TopbarLevel1.cshtml" />

    <div class="d-flex flex-grow-1 position-relative">

        <div id="sidebar" class="bg-dark text-white d-flex flex-column">
            <div class="p-3 flex-grow-1 d-flex flex-column overflow-auto">
                <div class="d-flex align-items-center mb-4">
                    <a class="navbar-brand d-flex align-items-center text-white text-decoration-none" asp-area="" asp-controller="Home" asp-action="Index">
                        <img src="~/picture/Gamiport.png" alt="GamiPort" class="me-2" style="width:36px;height:36px;object-fit:contain;" />
                        <span class="fw-bold">GamiPort</span>
                    </a>
                </div>
                <partial name="~/Views/Shared/_Sidebar.cshtml" />
                <hr class="text-white-50 my-3" />
                <partial name="_Sidebar" />
            </div>
        </div>

        <div id="content-wrapper" class="flex-grow-1 d-flex flex-column overflow-hidden ms-0">
            <div class="flex-grow-1 overflow-auto p-3">
                @RenderBody()
            </div>

            <partial name="~/Views/Shared/_Footer.cshtml" />
        </div>

    </div>

    <button id="sidebarToggle" class="btn btn-primary position-fixed bottom-0 start-0 m-3">
        <i class="fas fa-bars"></i>
    </button>

    <a class="btn btn-primary rounded-circle position-fixed bottom-0 end-0 m-3" href="#top"
       style="width:45px;height:45px;">
        <i class="fas fa-angle-up"></i>
    </a>

    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/font-awesome/js/all.min.js"></script>
    <script src="~/lib/jquery-easing/jquery.easing.min.js"></script>
    <script src="~/lib/sb-admin/js/sb-admin-2.min.js"></script>
    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/lib/chart.js/Chart.min.js"></script>
    <script src="~/js/test.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
